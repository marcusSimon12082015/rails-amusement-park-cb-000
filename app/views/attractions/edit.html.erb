<h1>Edit Attraction</h1>
<%= form_for @attraction do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :min_height %>
  <%= f.text_field :min_height, :type => "number" %><br />

  <%= f.label :happiness_rating %>
  <%= f.text_field :happiness_rating, :type => "number" %><br />

  <%= f.label :nausea_rating %>
  <%= f.text_field :nausea_rating, :type => "number" %><br />

  <%= f.label :tickets %>
  <%= f.text_field :tickets, :type => "number" %><br />

  <%= f.submit %>
<% end %>
<%= link_to "Back", attractions_path %>
